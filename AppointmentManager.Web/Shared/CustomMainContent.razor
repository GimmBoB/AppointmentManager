@inherits BreakpointComponentBase

<AuthorizeView>
    <Authorized>
        <ErrorBoundary @ref="_errorBoundary">
            <ChildContent>
                <MudContainer Style="@(IsMobileView ? "padding-top: 5px !important; padding-bottom: 5px !important" : "")" MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
                    @Body
                </MudContainer>
            </ChildContent>
            <ErrorContent Context="ex">
                <MudContainer Style="@(IsMobileView ? "padding-top: 5px !important; padding-bottom: 5px !important" : "")" MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
                    @Body
                </MudContainer>
                @{
                    AddSnackBar(ex.Message);
                    StateProvider.Logout();
                }
            </ErrorContent>
        </ErrorBoundary>
    </Authorized>
    <NotAuthorized>
        <ErrorBoundary @ref="_errorBoundary">
            <ChildContent>
                <MudContainer Style="@(IsMobileView ? "padding-top: 5px !important; padding-bottom: 5px !important" : "")" MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
                    @Body
                </MudContainer>
            </ChildContent>
            <ErrorContent Context="ex">
                <MudContainer Style="@(IsMobileView ? "padding-top: 5px !important; padding-bottom: 5px !important" : "")" MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
                    @Body
                </MudContainer>
                @{
                    AddSnackBar(ex.Message);
                }
            </ErrorContent>
        </ErrorBoundary>
    </NotAuthorized>
</AuthorizeView>
